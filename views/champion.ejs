<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="rounded side-panel">
                <img src="http://ddragon.leagueoflegends.com/cdn/img/champion/loading/<%= champion.key %>_0.jpg">
                <div class="caption">
                    <h1><%= champion.name %></h1>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="row">
                 <form class="post-item col-md-12 rounded" action="/champions/<%= champion.key %>/new" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="post[title]" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="post[content]" placeholder="What happened last game?"></textarea>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Add New Post">
                    </div>
                </form>
            </div>
            
            <% if(posts.length > 0) { %>
                <% posts.reverse().forEach(function(post) { %>
                    <div class="row">
                        <div class="col-md-12 post-item rounded">
                            <h2><%= post.title %> - </h2><h4><i><%= post.created.toDateString() %></i></h4>
                            <hr>
                            <p class="post-content rounded"><%- post.content %></p>
                            <div class="post-ctrl-panel">
                                <form action="/<%= post._id %>?_method=DELETE" method="POST">
                                    <input class="btn btn-danger btn-sm" type="submit" value="Delete">
                                </form>
                                <!--
                                <a class="btn btn-warning btn-sm">
                                    Edit
                                </a>-->
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<% include ./partials/footer %>