<% include ./partials/header %>

<div class="container main-board">
    <div class="row">
        <div class="col-md-8">
            <h1>What is League Logger?</h1>
            <hr>
            <h4>
                Learn something new about a champion? Log it! 
                <br><br>
                League Logger lets you collect and organize your thoughts about each champion.
                <br><br>
                Sign Up now to start logging and start climbing!
            </h4>
        </div>
        <div class="col-md-4">
            <form action="/signup" method="POST">
                <h1>Sign Up</h1>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div group="form-group">
                    <input class="btn btn-lg btn-primary" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>

